  fg=black
}




%% Define different frametitles
\defbeamertemplate{frametitle}{mydefault}{%
  \vspace*{2mm}
  \insertframetitle%
  \vspace*{1mm}
}

\defbeamertemplate{frametitle}{twocolumns}{%
    \begin{centering}
    \huge
    \color{orange}\insertframetitle%
    \end{centering}
}

\BeforeBeginEnvironment{frame}{%
  \setbeamertemplate{frametitle}[mydefault]%
}

\makeatletter
\define@key{beamerframe}{twocolumns}[true]{%
  \setbeamertemplate{frametitle}[twocolumns]%
}
\makeatother
