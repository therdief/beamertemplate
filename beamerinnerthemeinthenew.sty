%% Define different frametitles
\defbeamertemplate{frametitle}{mydefault}{%
  \nointerlineskip
  \begin{beamercolorbox}[sep=0.3cm,ht=1.8em,wd=\paperwidth]{frametitle}
    \vbox{}\vskip-2ex%
    \strut\insertframetitle\strut%
    \vskip-0.8ex%
  \end{beamercolorbox}
}

\defbeamertemplate{frametitle}{twocolumns}{%
    \begin{centering}
    \huge
    \color{orange}\insertframetitle%
    \end{centering}
}


\BeforeBeginEnvironment{frame}{%
  \setbeamertemplate{frametitle}[mydefault]%
}

\makeatletter
\define@key{beamerframe}{twocolumns}[true]{%
  \setbeamertemplate{frametitle}[twocolumns]%
}
\define@key{beamerframe}{plaingrey}[true]{%
  \setbeamercolor{background canvas}{bg=lmugray}%
}
\makeatother
