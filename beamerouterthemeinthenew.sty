%% Titlepage
\setbeamertemplate{title page}{
  \usebeamerfont{title}
  \centering
  \inserttitle \\
  \vspace*{5mm}
  {\usebeamercolor*[fg]{minor}\insertauthor} \\
  \vspace*{3mm}
  {\usebeamercolor*[fg]{minor}\insertdate} \\
}
\setbeamerfont{title}{
  size*={18}{1}
}

\setbeamercolor{minor} {
  fg=gray
}


%% footer
\setbeamertemplate{footline}{%
  \hrule
  \vspace*{1mm}
  \hspace*{3mm}
  \insertsubtitle, \insertdate
  \hfill
  \insertsection,\ Slide\ \insertframenumber$\ /\ $\insertmainframenumber
  \hspace*{3mm}
  \vspace*{1mm}
}
\setbeamerfont{footline}{
  size*={5}{0.2},
  shape=\itshape
}
\setbeamercolor{footline}{
  fg=gray
}

