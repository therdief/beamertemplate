%% Titlepage
\setbeamertemplate{title page}{
  \usebeamerfont{title}
  \centering
  \vspace*{15mm}
  \textbf\inserttitle \\
  \vspace*{9mm}
  \footnotesize{\usebeamercolor*[fg]{minor}\insertauthor} \\
  \vspace*{10mm}
  \footnotesize{\usebeamercolor*[fg]{minor}\insertdate} \\
  \vspace*{10mm}
  \begin{center}
  \includegraphics[width=0.5\textwidth]{/home/t/Theresa.Diefenbach/phd/beamertemplate/titlelogos.png}
  \end{center}
}


\setbeamercolor{minor} {
  fg=gray
}


%% footer
\setbeamertemplate{footline}{%
\begin{beamercolorbox}{footline}
  \hrule
  \vspace*{1mm}
  \hspace*{3mm}
  \insertsubtitle, \insertdate
  \hfill
  \insertsection,\ Slide\ \insertframenumber$\ /\ $\insertmainframenumber
  \hspace*{3mm}
  \vspace*{1mm}
\end{beamercolorbox}
}

